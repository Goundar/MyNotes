<h1>Listing notes</h1>

<div id="search">
  <%= form_tag(search_notes_path, :method => "get") do %>
   <%= text_field_tag(:keywords, @keywords) %>
   <%= submit_tag "Search", :class => "btn" %>
  <% end %>
</div>

<table class="table table-bordered table-striped">
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @notes.each do |note| %>
    <tr>
      <td><%= note.title %></td>
      <td><%= note.content %></td>
      <td><%= link_to 'Show', note %></td>
      <td><%= link_to 'Edit', edit_note_path(note) %></td>
      <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @notes %>
<br/>

<%= link_to 'New Note', new_note_path, :class => "btn" %>