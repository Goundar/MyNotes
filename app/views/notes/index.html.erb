<h1>Listing notes</h1>

<div id="search">
  <%= form_tag(search_notes_path, :method => "get") do %>
   <%= text_field_tag(:keywords, @keywords) %>
   <%= submit_tag "Search", :class => "btn" %>
  <% end %>
</div>

<table class="table table-bordered table-striped">
  <tr>
    <th>Title</th>
    <th>Content</th>
    <% if user_signed_in? %>
      <th></th>
      <th></th>
    <% end %>
  </tr>

  <%= render @notes %>
</table>

<%= will_paginate @notes %>
<br/>

<% if user_signed_in? %>
  <%= link_to 'New Note', new_note_path, :class => "btn" %>
<% end %>